%Stellt die Konstruktion \ifxetexorluatex ... \else .. \fi zur Verfügung
\newcommand{\xeluabool}{
%   Mögliche Implementierung, allerdings zwei Paketreferenzen nach außen, die optimalerweise vermieden werden sollten
	\usepackage{ifxetex}
	\usepackage{ifluatex}
	
	\usepackage{ifxetex,ifluatex}
	\newif\ifxetexorluatex
	\ifxetex
	  \xetexorluatextrue
	\else
	  \ifluatex
	    \xetexorluatextrue
	  \else
	    \xetexorluatexfalse
	  \fi
	\fi
}

%Lädt die Kodierungs-/Schriftpakete für die verwendete Engine
\newcommand{\jdfontsetup}{
	\xeluabool
	
	\ifxetexorluatex
	  \usepackage{fontspec}
	\else
	  \usepackage[T1]{fontenc}
	  \usepackage[utf8]{inputenc}
	  \usepackage{lmodern}
	\fi
}

